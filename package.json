{
  "name": "semantic-release-cmyr-config",
  "version": "1.0.1",
  "description": "草梅友仁自定义的 semantic-release 配置",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint . --fix --ext .ts,.js,.cjs,.mjs",
    "release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsdown",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsdown --watch",
    "start": "node ./dist/index",
    "start:tsx": "cross-env NODE_ENV=production tsx src/index.ts",
    "commit": "cz",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-cmyr-config": "^3.0.0",
    "conventional-changelog-writer": "^8.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^24.3.0",
    "commitizen": "^4.3.1",
    "commitlint": "^20.1.0",
    "commitlint-config-cmyr": "^1.0.0",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog-cmyr": "^2.0.0",
    "debug": "^4.4.1",
    "eslint": "^9.34.0",
    "eslint-config-cmyr": "^2.0.0-beta.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.2.2",
    "vitest": "^4.0.6"
  },
  "peerDependencies": {
    "semantic-release": ">=24"
  },
  "peerDependenciesMeta": {
    "semantic-release": {
      "optional": false
    }
  },
  "pnpm": {
    "overrides": {
      "compare-func": "^2.0.0",
      "katex": "^0.16.21",
      "esbuild": "^0.25.0",
      "@octokit/plugin-paginate-rest": "^11.4.1",
      "@octokit/request": "^9.2.1",
      "@octokit/request-error": "^5.1.1",
      "brace-expansion": "^2.0.2",
      "tmp": "^0.2.4",
      "@semantic-release/commit-analyzer": "^13.0.1",
      "@semantic-release/error": "^4.0.0",
      "@semantic-release/github": "^11.0.4",
      "@semantic-release/npm": "^12.0.2",
      "@semantic-release/release-notes-generator": "^14.0.3",
      "conventional-changelog-conventionalcommits": "^9.1.0",
      "conventional-changelog-writer": "^8.2.0",
      "glob": "^11.1.0",
      "js-yaml": "^4.1.1"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "semantic-release",
    "changelog",
    "release",
    "publish",
    "typescript"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/semantic-release-cmyr-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/semantic-release-cmyr-config.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/semantic-release-cmyr-config/issues"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  }
}
